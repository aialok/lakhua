{
  "name": "@aialok/lakhua",
  "version": "1.0.1",
  "description": "Fast, offline reverse geocoding for India",
  "keywords": [
    "reverse geocoding",
    "offline geocoding",
    "india geocoding",
    "geocoding",
    "geospatial",
    "gis",
    "h3",
    "h3-js",
    "h3 index",
    "openstreetmap",
    "osm",
    "point in polygon",
    "bounding box",
    "admin boundaries",
    "geospatial indexing",
    "coordinates",
    "latitude",
    "longitude",
    "city",
    "state",
    "district",
    "tehsil",
    "postal code",
    "pincode",
    "batch geocoding",
    "location lookup",
    "no api key",
    "free geocoding",
    "india maps"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aialok/lakhua.git"
  },
  "packageManager": "bun@1.2.20",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "data"],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bunx tsc -p tsconfig.json",
    "test": "bun test",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check . --write",
    "format": "bunx @biomejs/biome format .",
    "format:check": "bunx @biomejs/biome check .",
    "format:fix": "bunx @biomejs/biome format . --write",
    "lint-format": "bun run lint:fix && bun run format:fix",
    "check": "bun run format:check && bun run typecheck && bun test",
    "lint-staged": "lint-staged",
    "precommit": "bun run lint-staged && bun run typecheck",
    "example:basic": "bun run examples/basic.ts",
    "example:batch": "bun run examples/batch.ts",
    "pack:dry-run": "npm pack --dry-run --json",
    "prepack": "bun run build"
  },
  "dependencies": {
    "h3-js": "^4.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.20",
    "@types/node": "^22.10.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs,json,md}": ["bunx @biomejs/biome check --write"]
  }
}
